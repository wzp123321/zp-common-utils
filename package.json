{
  "name": "zp-common-utils",
  "type": "module",
  "author": {
    "name": "zpwan",
    "url": "https://github.com/wzp123321"
  },
  "description": "Vue Utils",
  "public": true,
  "version": "0.2.5",
  "files": [
    "lib"
  ],
  "main": "./lib/zp-common-utils.umd.cjs",
  "module": "./lib/zp-common-utils.js",
  "typings": "./lib/index.d.ts",
  "exports": {
    ".": {
      "import": "./lib/zp-common-utils.js",
      "require": "./lib/zp-common-utils.umd.cjs",
      "types": "./lib/index.d.ts"
    }
  },
  "keywords": [
    "vue",
    "vite",
    "utils",
    "typescript",
    "lib",
    "npm"
  ],
  "scripts": {
    "dev": "vite",
    "update": "esno scripts/update.ts",
    "build": "npm run update && vue-tsc && vite build",
    "docs:build": "vuepress build docs",
    "lint": "eslint . --ext .vue,.js,.ts,.jsx,.tsx --fix",
    "format": "prettier --write \"./**/*.{html,vue,ts,js,json,md}\"",
    "lint:style": "stylelint \"./**/*.{css,less,vue,html}\" --fix",
    "prepare": "husky install"
  },
  "dependencies": {
    "crypto-js": "^4.2.0",
    "vue": "^3.4.21"
  },
  "devDependencies": {
    "@eslint/js": "^9.3.0",
    "@types/crypto-js": "^4.2.2",
    "@types/node": "^20.12.12",
    "@vitejs/plugin-vue": "^5.0.4",
    "esbuild-register": "^3.5.0",
    "eslint": "^9.3.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-vue": "^9.26.0",
    "globals": "^15.3.0",
    "husky": "^9.0.11",
    "postcss": "^8.4.38",
    "postcss-html": "^1.7.0",
    "postcss-less": "^6.0.0",
    "prettier": "^3.2.5",
    "stylelint": "^16.5.0",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-recommended-less": "^3.0.1",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-config-standard-vue": "^1.0.0",
    "stylelint-less": "^3.0.1",
    "stylelint-order": "^6.0.4",
    "typescript": "^5.2.2",
    "typescript-eslint": "^7.10.0",
    "vite": "^5.2.0",
    "vite-plugin-dts": "^3.9.1",
    "vue-tsc": "^2.0.6"
  },
  "repository": {
    "url": "https://github.com/wzp123321/zp-common-utils.git"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 2020
    },
    "rules": {}
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ]
}
